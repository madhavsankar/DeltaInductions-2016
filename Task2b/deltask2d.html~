            var image = new Image();
            image.src = "images/images.jpg";
            var image1 = new Image();
            image1.src = "images/download (1).png";
            window.addEventListener("keydown", fn1, false);
           var x=1300,y=200,z=50,w=200,u=650,v=200;
            var i=0;
            var icon = document.getElementById("game");
            var iconx = icon.getContext("2d");
            iconx.drawImage(image1,x,y,50,50);
           
            var iconz = icon.getContext("2d");
            iconz.drawImage(image1,u,v,50,50);
             var icony = icon.getContext("2d");
            icony.drawImage(image,z,w,50,50);
            var time=10;
            var points=0;
            var k=setInterval(fn,time);
            function fn()
            { 
               
                iconx.clearRect(x, y, 50, 50);
                icony.clearRect(z, w, 50, 50);
                iconz.clearRect(u, v, 50, 50);
            
                x--;
                u--;
            
                iconx.drawImage(image1,x,y,50,50);
               icony.drawImage(image,z,w,50,50);
                 iconz.drawImage(image1,u,v,50,50);
                
                    
                
                if(x==-50)
                    {
                        x=1300;
                        points++;
                        if(time>2)
                        {
                            clearInterval(k);
                        time=time-1;
                        k=setInterval(fn,time);   //To make the game move faster as time proceeds
                        }
                        else
                            {
                                clearInterval(k);
                       
                        k=setInterval(fn,1);
                            }
                    }
                if(u==-50)
                    {
                        u=1300;
                        points++;
                        if(time>2)
                        {
                            clearInterval(k);
                        time=time-1;
                        k=setInterval(fn,time);
                        }
                        else
                            {
                                clearInterval(k);
                       
                        k=setInterval(fn,1);
                            }
                    }
              if(x-z<50 && z-x<50)
                  {
                      if(y-w<50 && w-y<50)
                          {
                              window.alert("Game over");
                              clearInterval(k);
                              document.getElementById("Result").innerHTML=points;
                          }
                  }
                 if(u-z<50 && z-u<50)
                  {
                      if(v-w<50 && w-v<50)
                          {
                              window.alert("Game over");
                              clearInterval(k);
                              document.getElementById("Result").innerHTML=points;
                          }
                  }
                  
            }
            function fn1(e)
                {
                     if (e.keyCode == "38" || e.keyCode == "32") 
                         {
                    i=0;
                   var l=setInterval(fn2,10);
                   
                   function fn2()
                    {
                        icony.clearRect(z, w, 50, 50);
                        
                    if(i==0)
                    {
                        if(w>=70)
                    {
                        w--;
                        if (w==70)
                           {
                            i=1;
                            }
                    }
                    }
                        if(i==1)
                            {
                        if(w<=200)
                            {
                                w++;
                                if(w==200)
                                    {
                                        clearInterval(l);
                                    }
                            }
                            }
                       
                       
                   icony.drawImage(image,z,w,50,50);
                         
                     }
                         }
                }
                      
